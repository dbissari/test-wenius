{% extends 'AppBundle:Default:index.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block page %}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <h1 class="page-header">Utilisateurs</h1>

            <h2 class="sub-header"><a href="{{ path('users_new') }}">Créer un nouvel utilisateur</a></h2>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Date et heure création</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.nom }}</td>
                                <td>{{ user.prenom }}</td>
                                <td>{{ user.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    <div class="btn-group btn-group-xs" role="group">
                                        <a type="button" class="btn btn-primary" href="{{ path('users_show', { 'idUtilisateur': user.idUtilisateur }) }}"><span class="glyphicon glyphicon-eye-open"></span> Détails</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
