                <td>{{ user.prenom }}</td>
                <td>{{ user.createdAt|date('d/m/Y H:i') }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('users_show', { 'idUtilisateur': user.idUtilisateur }) }}">show</a>
                        </li>
                    </ul>
