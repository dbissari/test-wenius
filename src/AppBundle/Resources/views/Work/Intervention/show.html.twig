{% extends 'AppBundle:Work/Intervention:layout.html.twig' %}

{% block content %}
    <h1>Intervention</h1>

    <table>
        <tbody>
            <tr>
                <th>Date intervention</th>
                <td>{{ intervention.dateIntervention|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ intervention.notes }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ intervention.createdAt|date('d/m/Y H:i') }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('interventions_index', { 'idOperation': operation.idOperation }) }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
