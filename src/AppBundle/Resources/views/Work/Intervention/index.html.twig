{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <h1><a href="{{ path('cars_show', { 'idVehicule': operation.vehiculeConcerne.idVehicule }) }}">Vehicule</a></h1>

    <table>
        <tbody>
        <tr>
            <th>Immatriculation</th>
            <td>{{ operation.vehiculeConcerne.immatriculation }}</td>
        </tr>
        <tr>
            <th>Marque</th>
            <td>{{ operation.vehiculeConcerne.marque }}</td>
        </tr>
        <tr>
            <th>Modele</th>
            <td>{{ operation.vehiculeConcerne.modele }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ operation.vehiculeConcerne.type }}</td>
        </tr>
        <tr>
            <th>Date achat</th>
            <td>{{ operation.vehiculeConcerne.dateAchat|date('d/m/Y') }}</td>
        </tr>
        </tbody>
    </table>

    <h1><a href="{{ path('operations_show', { 'idVehicule': operation.vehiculeConcerne.idVehicule, 'idOperation': operation.idOperation }) }}">Op√©ration</a></h1>

    <table>
        <tbody>
        <tr>
            <th>Sujet</th>
            <td>{{ operation.sujet }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ operation.description }}</td>
        </tr>
        <tr>
            <th>Date debut</th>
            <td>{{ operation.dateDebut|date('d/m/Y') }}</td>
        </tr>
        <tr>
            <th>Date fin prevue</th>
            <td>{{ operation.dateFinPrevue|date('d/m/Y') }}</td>
        </tr>
        <tr>
            <th>Date fin effective</th>
            <td>{% if operation.dateFinEffective %}{{ operation.dateFinEffective|date('d/m/Y') }}{% endif %}</td>
        </tr>
        </tbody>
    </table>

    <h1>Interventions list</h1>

    <table>
        <thead>
            <tr>
                <th>Date intervention</th>
                <th>Notes</th>
                <th>Created at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for intervention in interventions %}
            <tr>
                <td>{{ intervention.dateIntervention|date('Y-m-d') }}</td>
                <td>{{ intervention.notes }}</td>
                <td>{{ intervention.createdAt|date('d/m/Y H:i') }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('interventions_show', { 'idOperation': operation.idOperation, 'idIntervention': intervention.idIntervention }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('interventions_new', { 'idOperation': operation.idOperation }) }}">Create a new intervention</a>
        </li>
    </ul>
{% endblock %}
