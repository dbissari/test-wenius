{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <h1><a href="{{ path('cars_show', { 'idVehicule': vehicule.idVehicule }) }}">Vehicule</a></h1>

    <table>
        <tbody>
        <tr>
            <th>Immatriculation</th>
            <td>{{ vehicule.immatriculation }}</td>
        </tr>
        <tr>
            <th>Marque</th>
            <td>{{ vehicule.marque }}</td>
        </tr>
        <tr>
            <th>Modele</th>
            <td>{{ vehicule.modele }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ vehicule.type }}</td>
        </tr>
        <tr>
            <th>Date achat</th>
            <td>{{ vehicule.dateAchat|date('d/m/Y') }}</td>
        </tr>
        </tbody>
    </table>

    {% block content %}
    {% endblock %}
{% endblock %}
