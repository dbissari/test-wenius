{% extends 'AppBundle:Default:index.html.twig' %}

{% block title %}Vehicules{% endblock %}

{% block page %}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <h1 class="page-header">Vehicules</h1>

            <h2 class="sub-header"><a href="{{ path('cars_new') }}">Créer un nouveau vehicule</a></h2>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Immatriculation</th>
                        <th>Marque</th>
                        <th>Modele</th>
                        <th>Type</th>
                        <th>Date achat</th>
                        <th>Date et heure creation</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for vehicule in vehicules %}
                            <tr>
                                <td><a href="{{ path('cars_show', { 'idVehicule': vehicule.idVehicule}) }}">{{ vehicule.immatriculation }}</a></td>
                                <td>{{ vehicule.marque }}</td>
                                <td>{{ vehicule.modele }}</td>
                                <td>{{ vehicule.type }}</td>
                                <td>{{ vehicule.dateAchat|date('d/m/Y') }}</td>
                                <td>{{ vehicule.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    <div class="btn-group btn-group-xs" role="group">
                                        <a type="button" class="btn btn-primary" href="{{ path('cars_show', { 'idVehicule': vehicule.idVehicule }) }}"><span class="glyphicon glyphicon-eye-open"></span> Détails</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
