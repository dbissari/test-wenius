{% extends 'AppBundle:Default:index.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block page %}
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <h1 class="page-header">Vehicule</h1>
            <div class="row">
                <div class="col-sm-7 col-sm-offset-2">
                    <h4>Immatriculation : {{ vehicule.immatriculation }}</h4>
                    <h4>Marque : {{ vehicule.marque }}</h4>
                    <h4>Modele : {{ vehicule.modele }}</h4>
                    <h4>Type : {{ vehicule.type }}</h4>
                    <h4>Date achat : {{ vehicule.dateAchat|date('d/m/Y') }}</h4>
                    <h4>Date et heure création : {{ vehicule.createdAt|date('d/m/Y H:i') }}</h4>
                </div>
                <div class="col-sm-3">
                    <a href="{{ path('problems_index', { 'idVehicule': vehicule.idVehicule }) }}" type="button" class="btn btn-primary btn-block">Problemes liés</a>
                    <a href="{{ path('operations_index', { 'idVehicule': vehicule.idVehicule }) }}" type="button" class="btn btn-info btn-block">Operations liées</a>
                    {{ form_start(delete_form) }}
                        <input type="submit" class="btn btn-danger btn-block" value="Supprimer">
                    {{ form_end(delete_form) }}
                </div>
            </div>

            <h2 class="sub-header"><a href="{{ path('cars_index') }}">Retour à la liste</a></h2>
        </div>
    </div>
{% endblock %}
